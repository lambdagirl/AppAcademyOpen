<% action = (cat.persisted? ? cat_url(cat) : cats_url) %>
<% method = (cat.persisted? ? :patch : :post) %>

<form action="<%= action %>" method="post">
  <input type="hidden" name="_method" value="<%= method %>">

  <label for="cat_name">Name</label>
  <input type="text" name="cat[name]" id="cat_name" value="<%= cat.name %>"/>
  <br>

  <input type="radio" name="cat[sex]" value="F" id="cat_sex_female"
    <%= cat.sex =="F" ? "checked" : "" %> />
  <label>Female</label>
  <input type="radio" name="cat[sex]" value="M" id="cat_sex_female"
    <%= cat.sex =="M" ? "checked" : "" %> />
  <label>Male</label>
  <br>

  <label for="cat_color">Color</label>
  <select name="cat[color]" id="cat_color">
    <option disabled selected>select a color</option>
    <option value="red">red</option>
    <option value="yellow">yellow</option>
    <option value="white">white</option>
    <option value="black">black</option>
    <option value="brown">brown</option>
    <option value="multi-color">multi-color</option>
  </select>
  <br>

  <label for="cat_birth_date">Birthday</label>
  <input
    type="date"
    name="cat[birth_date"
    id="cat_birth_date"
    value="<%= cat.birth_date %>" />
  <br>

  <label>
    Description
    <textarea name="cat[description]">
        <%= cat.description%>
    </textarea>
  </label>
  <br>

  <input type="submit" value="submit">
</form>